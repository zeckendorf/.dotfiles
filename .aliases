# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

# Shortcuts
alias d="cd ~/Dropbox"
alias g="git"
alias h="history"
alias j="jobs"
alias v="vim"
alias m="mate ."
alias s="cd ~/Source"
alias o="open"
alias oo="open ."

# serial comms
alias mc="minicom -c on -D "


# tmux environments
alias dev="tmux_create_or_attach dev"

# Detect which `ls` flavor is in use
# if ls --color > /dev/null 2>&1; then # GNU `ls`
#     colorflag="--color"
# else # OS X `ls`
#     colorflag="-G"
# fi

# use GNU ls if it exists and we're on OS X
command -v gls >/dev/null 2>&1 && alias ls="gls -F --color=auto"

# List all files colorized in long format
alias l="ls -l"

# List all files colorized in long format, including dot files
alias la="ls -Fla"

# List long, but don't show hidden files
alias ll="ls -Fl"

# List only directories
alias lsd='ls -Fl | grep "^d"'

